<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itjm.dao.AccountDao">

    <!--配置查询结果的列名和实体类的属性名的对应关系-->
    <resultMap id="userMap" type="com.itjm.domain.Account">
        <!--主键字段的对应-->
        <id property="id" column="id"></id>
        <!--非主键字段的对应-->
        <!--property对应的实体类的属性，column对应的是数据库的字段-->
        <result property="username" column="username"></result>
        <result property="money" column="money"></result>
    </resultMap>

    <select id="findAll"  resultType="com.itjm.domain.Account">
        select * from account;
    </select>
    <!-- SQL语句 -->
    <insert id="saveAccount" parameterType="com.itjm.domain.Account">
        insert into account(id,name,money)value (#{id},#{name},#{money});
    </insert>
    <update id="updateAccount" parameterType="com.itjm.domain.Account">
        update account set name=#{name},money=#{money} where id=#{id};
    </update>
    <delete id="deleteAccountByPrimaryKey" parameterType="String">
        delete  from account where id=#{id};
    </delete>

   <!-- 根据queryVo的条件查询用户
    <select id="findByName" parameterType="com.itjm.domain.QueryVo" resultType="com.itjm.domain.User">
        select * from account where username like #{account.name}
    </select>-->
</mapper>